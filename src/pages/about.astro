---
import MainHead from "../components/MainHead.astro";
import Footer from "../components/Footer/index.jsx";
import Nav from "../components/Nav/index.jsx";

const { hideNav } = Astro.props;
---

<html lang="en">
  <head>
    <MainHead title="About Me" description="About Me" />
    <style lang="scss">
      .bio {
        font-size: var(--f-u1);
        line-height: 2;
      }
    </style>
  </head>
  <body>
    {!hideNav && <Nav />}
    <div class="wrapper">
      <div class="bio wrapper wrapper__readable mt8">
        <h1>About Me</h1>
        <ul>
          <li>
            I'm a frontend biased full stack frontend engineer with a little bit
            of enterpeneur sprinkled in 🖥️
          </li>
          <li>
            As a former technical recruiter before learning to code, I bring an
            unorthodox perspective to the table 🤝
          </li>
          <li>
            I work as a software engineer at Holland & Barrett - right now, I'm
            in the supply chain team 💊
          </li>
          <li>
            I'm Co-Founder at The Coder Career, a careers network for people in
            tech 📈
          </li>
          <li>
            Outside work, my biggest hobby is rugby - I play for my local team
            here in Edinburgh and am a huge fan of the game 🏉
          </li>
          <li>
            I'm usually playing guitar, lifting weights or hanging out with my
            cat Earl Grey 😺
          </li>
        </ul>
      </div>

      {!hideNav && <Footer />}
    </div>
  </body>
</html>
