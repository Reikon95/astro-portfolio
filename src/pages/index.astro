---
import MainHead from "../components/MainHead.astro";
import Nav from "../components/Nav/index.jsx";
import Footer from "../components/Footer/index.jsx";
import Landing from "../components/Landing/index.jsx";
import ApperancesPreview from "../components/AppearancesPreview/index.jsx";
import WorkPreview from "../components/WorkPreview/index.jsx";

import About from "./about.astro";
---

<html lang="en">
  <head>
    <MainHead
      title="Cameron Blackwood"
      description="Cameron Blackwood: Developer, Speaker, and Writer..."
    />
    <style lang="scss">
      $w-s: 750px;

      .hero {
        position: relative;
        min-height: 45vw;
      }

      .flexbox {
        display: flex;
        justify-content: center;
      }

      .overlay {
        min-height: 95vh;
        background-color: rgb(65, 74, 82);
        padding: 16px;
        color: white;
      }

      .title {
        font-weight: 900;
        font-size: var(--f-u8);
        margin-bottom: 0.5rem;
        margin-top: 0;
        color: white;
        @media (min-width: $w-s) {
          font-size: var(--f-u12);
        }
      }

      .headshot {
        height: 100px;
        width: 100px;
      }

      .grid {
        display: grid;
        grid-gap: 2rem;

        @media (min-width: 1200px) {
          grid-template-columns: 2fr 1fr;
        }
      }

      .name-and-headshot {
        width: 100%;
        display: flex;
        justify-content: space-between;
      }

      .landing-options {
        margin-top: 10%;
      }
    </style>
  </head>
  <body>
    <Nav />
    <header class="hero">
      <div class="overlay">
        <div class="name-and-headshot">
          <h1 class="title">Cameron Blackwood</h1>
          <img class="headshot" src="/assets/cam-headshot.png" />
        </div>
        <div class="landing-options">
          <span class="role">Click a role to find out more about me...</span>
          <Landing client:load />
        </div>
      </div>
    </header>
    <About hideNav={true} />
    <div class="flexbox">
      <WorkPreview />
      <ApperancesPreview />
    </div>
    <Footer />
  </body>
</html>
